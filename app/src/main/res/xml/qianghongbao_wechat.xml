<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="开启微信抢红包平台">

        <com.dreamcoding.administrator.fightluckymoney.ui.view.CustomSwitchPreference
            android:defaultValue="true"
            android:title="微信"
            android:icon="@drawable/settings_ic_wechat"
            android:key="KEY_ENABLE_WECHAT"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="平台设置">

        <Preference
            android:title="微信设置"
            android:summary="更改抢红包模式，可以防封号"
            android:key="WECHAT_SETTINGS"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="高级设置">
        <com.dreamcoding.administrator.fightluckymoney.ui.view.CustomSwitchPreference
            android:title="快速监听通知栏"
            android:summary="闪电模式，抢红包更快更稳定"
            android:defaultValue="false"
            android:key="KEY_NOTIFICATION_SERVICE_TEMP_ENABLE"/>

        <Preference
            android:title="红包提醒设置"
            android:key="NOTIFY_SETTINGS"/>
    </PreferenceCategory>


    <PreferenceCategory
        android:title="关于">
        <Preference
            android:title="感谢"
            android:summary="这个抢红包代码是参照codeboy大神写的，感谢开源"
            android:key="KEY_FOLLOW_ME"/>

        <Preference
            android:title="打赏"
            android:summary="如果觉得该应用好用，求打赏！"
            android:key="KEY_DONATE_ME"/>
    </PreferenceCategory>

</PreferenceScreen>